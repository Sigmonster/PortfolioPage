@model PortfolioPage.Models.CodeFirst.Comment


@{
    ViewBag.Title = "Delete";
}


<div class="container-fluid">
    <div class="row">
        <section class="title-header blog-pages-header">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="section-title">
                            <h3>BlogPost Moderator-Section</h3><h4>Are you sure you want to DELETE this Comment from the DataBase?</h4>
                            <span class="st-border"></span>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="container col-md-10 col-sm-10 col-xs-10 center-block blog-post-pagescontent">
            <div class="row">
                <div class="col-xs-12 col-sm-8 center-block">
                    <div class="row">
                        <div class="col-xs-12 center-block">
                            <div class="row">
                                <h5 style="float:left;">Delete Comment</h5>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="row">
                                    <ul class="details-ul">
                                        <li><strong>@Html.DisplayNameFor(model => model.Created)</strong></li>
                                        <li>@Html.DisplayFor(model => model.Created)</li>
                                        <li><strong>@Html.DisplayNameFor(model => model.Updated)</strong></li>
                                        <li>@Html.DisplayFor(model => model.Updated)</li>
                                        <li></li>
                                    </ul>
                                </div>
                                <div class="details-post-article">
                                    @Html.Raw(Model.Body);
                                </div>
                            </div>
                        </div>
                        <div class="row blog-details-btn-row">
                            <ul>
                                <li>
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="form-actions no-color">
                                            <a class="btn btn-readmore" href='@Url.Action("Edit", "Comments", new { id= Model.Id })'>Edit This Comment</a>
                                            <input type="submit" value="Delete" class="btn btn-readmore" />
                                        </div>
                                    }
                                </li>

                            </ul>
                        </div>
                        <hr />
                        <div class="row blog-details-btn-row">
                            <a class="btn btn-readmore" href='@Url.Action("Index", "Comments")'>All Comments List</a>
                            <a class="btn btn-readmore" href='@Url.Action("Index", "BlogPosts")'>Back to Blog List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

