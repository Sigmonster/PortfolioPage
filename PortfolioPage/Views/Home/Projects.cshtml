            }
            else if (0 == numbersFizzBuzz[i] % factor2FizzBuzz) {
                numbersFizzBuzz[i] = "Buzz";
            }
        }
    }
    function displayFizzBuzzOutput() { //displays array data in quick & dirty horizontal list
