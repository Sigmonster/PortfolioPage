@model PortfolioPage.Models.CodeFirst.Comment
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Create", "Comments", FormMethod.Post, new { enctype = "Multipart/form-data" }))
    {
    @Html.AntiForgeryToken()

        /*Hidden-Start*/
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PostId, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.PostId, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Updated, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Updated, "", new { @class = "text-danger" })
        /*Hidden-End*/
            <div class="row">
                <h5>Add Comment</h5>
            </div>
            <div class="row">
                @Html.TextAreaFor(model => model.Body, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
            </div>
            <div class="row">
                <input type="submit" value="Add" class="btn btn-readmore" />
            </div>

    }
}
