@model IPagedList<PortfolioPage.Models.CodeFirst.BlogPost>

@using PagedList;
@using PagedList.Mvc;

<head>
    <meta charset="UTF-8">

    @{
        ViewBag.Title = "Blog";
    }

</head>
<body>
    <!-- PRELOADER -->
    <div id="st-preloader">
        <div id="pre-status">
            <div class="preload-placeholder"></div>
        </div>
    </div>
    <!-- /PRELOADER -->
    <!-- HEADER -->
    <!-- /HEADER -->
    <!-- PAGE HEADER -->
    <section id="page-header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-title">
                        <h1>Blog</h1>
                        <span class="st-border"></span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /PAGE HEADER -->
    <!-- BLOG -->
    <section id="blog">
        <div class="container">
            <div class="row">
                <div class="row">
                    @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                    {<a class="btn btn-readmore" href='@Url.Action("Create", "BlogPosts")'>Create New</a>}
                    <div class="col-md-3 pull-right">
                        <div class="blog-search">
                            @using (Html.BeginForm("Index", "BlogPosts", FormMethod.Get, new { enctype = "Multipart/form-data" }))
                            {
                                <input type="text" name="searchStr" class="form-contol">
                                <span>
                                    <button id="submit_btn" class="search-submit" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            }
                        </div>
                        <a class="btn btn-readmore" href='@Url.Action("Index", "BlogPosts")'>Clear Search <i class="fa fa-times-circle" aria-hidden="true"></i></a>
                    </div>
                </div>
                <div class="col-md-9">
                    @foreach (var item in Model)
                    {
                        <div class="single-blog">
                            <article>
                                <div class="post-thumb">
                                    @if (item.MediaURL != null)
                                    {
                                        <img class="img-responsive" src="@item.MediaURL" alt="">
                                        <hr>
                                    }
                                    @*<img class="img-responsive" src="~/Images/blog/01.jpg" alt="">*@
                                </div>
                                <h4 class="post-title"><a href="">@Html.DisplayFor(modelItem => item.Title)</a></h4>
                                <div class="post-meta text-uppercase">
                                    <span>Created: @Html.DisplayFor(modelItem => item.Created)</span>
                                    <span>By <a href="">Sigmonster(Admin)</a></span>
                                </div>
                                <div class="post-article">
                                    @Html.Raw(item.Body);
                                </div>
                                <div class="row blog-btns1">
                                    <a class="btn btn-readmore" href='@Url.Action("Details",new {Slug = item.Slug})'>Details</a>
                                </div>
                            </article>
                        </div>
                        <hr>
                    }
                    <div class="pagelist-btns">
                        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),PagedListRenderOptions.ClassicPlusFirstAndLast)
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="sidebar-widget">
