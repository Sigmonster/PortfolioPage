@model IEnumerable<PortfolioPage.Models.CodeFirst.Comment>

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
<div class="container-fluid">
    <div class="row">
        <section class="title-header blog-pages-header">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="section-title">
                            <h3>BlogPost Moderator-Section</h3><h4>Comments Index Section</h4>
                            <span class="st-border"></span>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <br />
        <br />
        <div class="col-md-10 col-sm-10 col-xs-10 center-block blog-post-pagescontent">
            <div class="row">
                <table class="table pure-table-striped cmt-mod-tble">
                    <thead>
                        <tr id="cmt-table-head">
                            <th>
                                @Html.DisplayNameFor(model => model.Author.DisplayName)
                            </th>
                            <th>
                                BlogPost
                            </th>
                            <th>
                                Comment Body
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Created)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Updated)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UpdateReason)
                            </th>
                            <th>
                                Options
                            </th>
                        </tr>
                    </thead>
                    <tbody id="cmt-table-body">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Author.DisplayName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Post.Title)
                                </td>
                                <td>
                                    <div class="cmt-tbl-body">
                                        @Html.DisplayFor(modelItem => item.Body)
                                    </div>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Created)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Updated)
                                </td>
                                <td>
                                    <div class="cmt-tbl-body">
                                        @Html.DisplayFor(modelItem => item.UpdateReason)
                                    </div>
                                </td>
                                <td>
                                    <div name="moderator button dropdown" class="dropdown cmt-tbl-dropdown">
                                        <button class="btn btn-default dropdown-toggle glyphicon glyphicon-edit cmt-dropdown-btn" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                                            <li><a class="" href='@Url.Action("Edit", "Comments", new { id = item.Id })'>Edit</a> </li>
                                            <li><a class="" href='@Url.Action("Details", "Comments", new { id = item.Id })'>Details</a> </li>
                                            <li><a class="" href='@Url.Action("Delete", "Comments", new { id = item.Id })'>Delete</a> </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <br />
            <hr />
            <div class="row blog-details-btn-row">
                <a class="btn btn-readmore" href='@Url.Action("Index", "BlogPosts")'>Back to Blog List</a>
            </div>
        </div>
    </div>
</div>





